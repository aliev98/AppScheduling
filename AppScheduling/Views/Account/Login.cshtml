@model AppScheduling.Models.ViewModels.LoginViewModel

<div class="text-center py-3 pb-3">
    <h2>Sign in</h2>
    <br />
    <h5>Use your registered email Id and password to login.</h5>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-7">
            <section id="loginForm">
                <form id="account" method="post" asp-controller="Account">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <br />
                    <div class="form-group row">
                        <label class="col-2" asp-for="Email"></label>
                        <div class="col-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 pl-0 pr-3" asp-for="Password"></label>
                        <div class="col-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10 p-3 checkbox">
                            <label asp-for="RememberMe" class="pr-4 pl-0">
                                <input asp-for="RememberMe" />
                            </label>
                            Remember me?
                        </div>
                    </div>

                    <div class="form-group ">
                        <input type="submit" class=" btn btn-primary col-4 d-block mx-auto" value="Log in" />
                    </div>

                    <div class="p-3">
                        <p class="col-md-10 offset-md-2 ">
                            Dont have an account? <a asp-action="Register">Sign up now</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}